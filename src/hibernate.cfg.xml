<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pdv?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="model/Produtograde.hbm.xml"/>
    <mapping resource="model/Usuario.hbm.xml"/>
    <mapping resource="model/Pagamentovenda.hbm.xml"/>
    <mapping resource="model/Unidade.hbm.xml"/>
    <mapping resource="model/Cor.hbm.xml"/>
    <mapping resource="model/Colaborador.hbm.xml"/>
    <mapping resource="model/Vendaitem.hbm.xml"/>
    <mapping resource="model/Produto.hbm.xml"/>
    <mapping resource="model/Tamanho.hbm.xml"/>
    <mapping resource="model/Caixa.hbm.xml"/>
    <mapping resource="model/Tipopagamento.hbm.xml"/>
    <mapping resource="model/Venda.hbm.xml"/>
    <mapping resource="model/Cargo.hbm.xml"/>
    <mapping resource="model/Caixasuprimento.hbm.xml"/>
    <mapping resource="model/Caixasangria.hbm.xml"/>
    <mapping resource="model/Feature.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
